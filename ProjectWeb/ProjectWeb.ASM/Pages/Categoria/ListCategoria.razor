@page "/ListCategoria"
@using Microsoft.AspNetCore.Authorization
@using ProjectWeb.ASM.Repositorio
@using ProjectWeb.Shared.Modelo.DTO.Categoria
@using ProjectWeb.Shared.Modelo.Estatico
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService
@inject IRepository repository
@attribute [Authorize(Roles = "Admin,Employee")]

<PageTitle>Categorias</PageTitle>
<ConfirmDialog @ref="dialog" />


<div class="centrado-pantalla">
    <div class="container-tabla">
        <Card >
            <CardHeader class="text-center fs-4">
                Lista De Categorias
            </CardHeader>
            <CardBody>
                <div class="tabla-responsive-wrapper">
                    <Grid TItem="CategoriaDTO"
                          Class="table table-hover table-bordered align-middle grid-table"
                          FiltersRowCssClass="bg-primary text-white bg-opacity-25 border-bottom-0"
                          HeaderRowCssClass="bg-primary text-white border-bottom-0"
                          DataProvider="CategoriaDataProvider"
                          AllowFiltering="true"
                          AllowPaging="true"
                          PageSize="10"
                          AllowSorting="true"
                          AllowRowClick="true"
                          OnRowClick="OnrowClick"
                          Responsive="true"
                          @ref="grid">
                        <GridTemplates Class="gap-2">
                            <ExportLayout TItem="CategoriaDTO" GridRef="grid" Items="ListaCategoria" />
                        </GridTemplates>
                        <GridColumn TItem="CategoriaDTO" HeaderText="ID Categoria" PropertyName="Id_Categoria" SortString="Id_Categoria" SortKeySelector="item => item.Id_Categoria" FilterTextboxWidth="100" HeaderTextAlignment="Alignment.Center" TextAlignment="Alignment.Center">
                            <a href="/ListProd/@context.Id_Categoria/@context.Descripcion_Cat">@context.Id_Categoria</a>
                        </GridColumn>

                        <GridColumn TItem="CategoriaDTO" HeaderText="Name" PropertyName="Descripcion_Cat" HeaderTextAlignment="Alignment.Center" SortString="Descripcion_Cat" SortKeySelector="item => item.Descripcion_Cat" FilterTextboxWidth="200">
                            @context.Descripcion_Cat
                        </GridColumn>

                        <GridColumn TItem="CategoriaDTO" HeaderText="Información" PropertyName="Informacion" SortString="Informacion_Cat" SortKeySelector="item => item.Informacion_Cat" FilterTextboxWidth="100">
                            @context.Informacion_Cat
                        </GridColumn>

                        <GridColumn TItem="CategoriaDTO" HeaderText="Estado" PropertyName="Estado_Cat" HeaderTextAlignment="Alignment.Center" SortString="Estado_Cat" SortKeySelector="item => item.Estado_Cat" FilterTextboxWidth="100">
                            @Estado.GetTextEstado(@context.Estado_Cat)
                        </GridColumn>

                        <GridColumn TItem="CategoriaDTO" HeaderText="Acción" HeaderTextAlignment="Alignment.Center" TextAlignment="Alignment.Start" Filterable="false" FilterTextboxWidth="250">
                            <div class="btn-action-column">
                                <button class="btn btn-success btn-sm" @onclick=@(() => ShowModal(context.Id_Categoria, true))>Update</button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteReg(context.Id_Categoria, context.Descripcion_Cat)">Delete</button>
                            </div>
                        </GridColumn>
                    </Grid>
                </div>
                
            </CardBody>
            <CardFooter class="d-flex justify-content-end ">
                <button class="btn btn-primary" @onclick=@(() => ShowModal())>Nuevo Registro</button>
            </CardFooter>
        </Card>
    </div>
</div>

@code {
    private ConfirmDialog dialog = default!;
    [Inject] ToastService ToastService { get; set; } = default!;

    [Inject] protected PreloadService PreloadService { get; set; } = default!;
    public CategoriaDTO Input = new CategoriaDTO();
    private string? previewUrl;
    private List<CategoriaDTO> ListaCategoria { get; set; } = default!;
    private BlazorBootstrap.Grid<CategoriaDTO>? grid;
    private List<Estado> items = new();
    [CascadingParameter]
    IModalService Modal { get; set; } = default!;

    private async Task ShowModal(int id = 0, bool isEdit = false)

    {
        IModalReference modalReference;

        if (isEdit)
        {

            var parameters = new ModalParameters();
            parameters.Add("InputDTO", Input);
            parameters.Add("SubmitButtonText", "Update");
            parameters.Add("Titulo", "Modifica Datos De Categoria");
            modalReference = Modal.Show<CategoriaComponent>(parameters);
        }
        else
        {
            var parameters = new ModalParameters();
            parameters.Add("InputDTO", Input = new());
            parameters.Add("SubmitButtonText", "Save");
            parameters.Add("Titulo", "Registro De Categoria");
            modalReference = Modal.Show<CategoriaComponent>(parameters);
        }
        var result = await modalReference.Result;
        if (result.Confirmed)
        {
            await RefrescarGrid();
        }

    }

    private async Task LoadCategoria()
    {
        PreloadService.Show(SpinnerColor.Light, "Loading data...");
        var responseHttp = await repository.Get<List<CategoriaDTO>>("/api/Categorias");
        if (responseHttp.Error)
        {
            var message = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        ListaCategoria = responseHttp.Response?.ToList() ?? new List<CategoriaDTO>();
        StateHasChanged();
        PreloadService.Hide();


    }

    private async Task<GridDataProviderResult<CategoriaDTO>> CategoriaDataProvider(GridDataProviderRequest<CategoriaDTO> request)
    {
        if (ListaCategoria is null) // pull employees only one time for client-side filtering, sorting, and paging
            await LoadCategoria();
        return await Task.FromResult(request.ApplyTo(ListaCategoria!));
    }
    private async Task OnrowClick(GridRowEventArgs<CategoriaDTO> args)
    {
        //await ModalService.ShowAsync(new ModalOption { Type = ModalType.Primary, Title = "Event: Row Click", Message = $"Id: {args.Item.Id_user}, Name: {args.Item.User_name}" });
        Input.Id_Categoria = args.Item.Id_Categoria;
        Input.Descripcion_Cat = args.Item.Descripcion_Cat;
        Input.Informacion_Cat = args.Item.Informacion_Cat;
        Input.Estado_Cat = args.Item.Estado_Cat;
        
        return;
    }
