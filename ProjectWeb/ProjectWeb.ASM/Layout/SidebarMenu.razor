<Sidebar2 @ref="sidebar2"
          Href="/"
          IconName="IconName.BootstrapFill"
          Title="System Automation"
          BadgeText="v2.1.0"
          ShowIcons="true"
          Width="300"
          WidthUnit="Unit.Px"
          DataProvider="Sidebar2DataProvider" />

@code {
    private Sidebar2 sidebar2 = default!;
    private IEnumerable<NavItem>? navItems;

    private async Task<Sidebar2DataProviderResult> Sidebar2DataProvider(Sidebar2DataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();

        await Task.Delay(200); // Simula carga de datos
        return await Task.FromResult(request.ApplyTo(navItems));
    }

    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new NavItem { Id = "1", Href = "/", IconName = IconName.HouseDoorFill, Text = "Home" },

            new NavItem { Id = "2", Href = "/Dasboard",IconName = IconName.Newspaper, Text = "Dashboad" },

            new NavItem { Id = "3", Href = "#", IconName = IconName.PersonLock, Text = "Athentication" },

            new NavItem { Id = "4", Href = "/Login", IconName = IconName.Key, Text = "Login", IconColor = IconColor.Success, ParentId="3" },
            
            new NavItem { Id = "5", Href = "/Register", IconName = IconName.PersonVCard , IconColor = IconColor.Success, Text = "Register", ParentId="3" },
            
            new NavItem { Id = "6", Href = "/Contact" ,IconName = IconName.PinMapFill, Text = "Contacto" },

             new NavItem { Id = "", Href = "/ListEmpresa" ,IconName = IconName.PinMapFill, Text = "Empresa" },
            
        };

        return navItems;
    }

    public void ToggleSidebar() => sidebar2.ToggleSidebar();
}